<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:background="#424242">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="321dp"
            android:gravity="top"
            android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/test" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="226dp"
            android:layout_height="39dp"
            android:layout_marginVertical="30dp"
            android:text="@string/nav_header_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/app_details"
            android:layout_width="125dp"
            android:layout_height="61dp"
            android:background="@drawable/ripple_effect"
            android:text="@string/app_details"
            android:textAllCaps="false"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.556"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="365dp"
        android:layout_height="180dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:overScrollMode="never"
        android:layout_marginVertical="380dp">

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_desc"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_desc_2"
            android:layout_marginVertical="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:gravity="left"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_desc_3"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginVertical="215dp"
            android:gravity="left"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_visit"
            android:textColor="#ffffff"
            android:layout_marginVertical="320dp"
            android:layout_marginLeft="27dp"
            android:gravity="center"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/git"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/git"
            android:layout_marginVertical="355dp"
            android:layout_marginLeft="90dp"
            android:contentDescription="@string/git_desc"
            android:clickable="true"
            android:contextClickable="true" />

        <ImageView
            android:id="@+id/git_dl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginVertical="355dp"
            android:layout_marginLeft="220dp"
            android:contentDescription="@string/git_release"
            android:clickable="true"
            android:contextClickable="true"
            android:src="@drawable/git_dl" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="430dp"
            android:layout_marginLeft="100dp"
            android:text="@string/git_desc"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="430dp"
            android:layout_marginLeft="220dp"
            android:text="@string/git_release"
            android:textColor="#ffffff"/>

    </RelativeLayout>
    </ScrollView>

</FrameLayout>